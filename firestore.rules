rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Autoriser l'accès aux documents de progression uniquement à l'utilisateur authentifié correspondant
    match /users/{userId}/progress/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Autoriser l'accès aux routines uniquement à l'utilisateur authentifié correspondant
    match /users/{userId}/routines/{routineId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Bloquer tout autre accès
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
